{{> header title='home'}}

<svg class="hidden-svg">
  <defs>
    <pattern id="wave-pattern" width="24" height="24" patternUnits="userSpaceOnUse" patternTransform="translate(0,-40)">
      <circle cx="0" cy="0" r="6" stroke="white" stroke-width="3" fill="transparent" />
      <circle cx="12" cy="24" r="6" stroke="white" stroke-width="3" fill="transparent" />
      <circle cx="24" cy="0" r="6" stroke="white" stroke-width="3" fill="transparent" />
    </pattern>

    <pattern id="stripe-pattern" width="10" height="3" patternUnits="userSpaceOnUse" patternTransform="rotate(45)">
      <rect width="2" height="3" fill="white" />
    </pattern>
  </defs>
</svg>

<section id="hero">
  <div class="inner">
    <div class="row">
      <div class="nine columns offset-by-one">
        <h1>Secret Handshake</h1>
        <svg id="hero-stripes" class="stripes">
          <rect class="shape" x="0" y="0" width="100%" height="100%"></rect>
          <mask id="hero-mask">
            <rect x="0" y="0" width="100%" height="100%" fill="url(#stripe-pattern)">
          </mask>
        </svg>
      </div>
      <div class="three columns offset-by-nine"><img src="images/logo-dark.svg"></div>
    </div>
  </div>
</section>

<section id="intro" class="sec">
  <div class="inner">
    <div class="row">
      <div class="twelve columns center">Secret Handshake is a monthly gathering of creative people. <span></span>Join us for new friendships and good conversation.</div>
    </div>
  </div>
</section>

<section id="photos" class="sec">
  <div class="inner">
    <div class="row">
      <ul id="images">
        <li><img src="images/meetup-shot-1.jpg"></li>
      </ul>
    </div>
  </div>
</section>

<section id="testimonials" class="sec">
  <div class="inner">
    <svg class="back">
      <rect class="shape" fill="url(#wave-pattern)" x="0" y="0" width="100%" height="100%"></rect>
    </svg>
    <h2 class="section-title">Testimonials</h2>
    <div class="row">
      <div class="eight columns center">
        <blockquote>
          <div class="quote">"I've formed many relationships through Secret Handshake in which I've undertaken freelance projects through SH contacts. Sometimes it takes a couple of years for it to happen, but the networking is invaluable and has created 10s of thousands of dollars of work for me over the years."</div>
        </blockquote>
      </div>
    </div>
  </div>
</section>

<section id="organizers" class="sec">
  <div class="inner">
    <svg class="back">
      <rect class="shape" fill="url(#wave-pattern)" x="0" y="0" width="100%" height="100%"></rect>
      <mask id="organizers-mask">
        <rect x="0" y="0" width="100%" height="100%" fill="url(#wave-pattern)">
      </mask>
    </svg>
    <h2 class="section-title">Organizers</h2>
    <div class="row">
      <div class="three columns person">
        <img src="images/ben.jpg" class="headshot">
        <div class="name">Ben Rogers</div>
        <div class="handle"><a href="https://twitter.com/BenRogersWPG" title="Ben on Twitter">@BenRogersWPG</a></div>
      </div>
      <div class="three columns person">
        <img src="images/kris.jpg" class="headshot">
        <div class="name">Kris Busby</div>
        <div class="handle"><a href="https://twitter.com/krisbusby" title="Kris on Twitter">@krisbusby</a></div>
      </div>
    </div>
    <div class="row">
      <div class="cta eight columns center">Questions, comments, or looking for introductions? <div></div><span>Say </span><a class="email" href="mailto:hello@secrethandshake.ca">hello@secrethandshake.ca</a> or hit up one of our organizers.</div>
    </div>
  </div>
</section>

<section id="next-meetup" class="sec">
  <div class="inner">
    <svg class="back">
      <rect class="shape" fill="url(#wave-pattern)" x="0" y="0" width="100%" height="100%"></rect>
    </svg>
    <h2 class="section-title">Upcoming</h2>
    <div class="row">
      <div class="eight columns center meetup"></div>
    </div>
  </div>
</section>

<section id="slack">
  <div class="inner">
    <div class="seven columns offset-by-four">
      <h3>Slack Chat</h3>
      <div>Keep the conversation going. Join us on Slack!</div>
      <form method="post" action="/invite">
        <input type="email" name="email" placeholder="Email" class="nine columns">
        <input type="submit" value="Send" class="three columns">

        <div class="message"></div>
      </form>

      <svg class="stripes">
        <rect class="shape" x="0" y="0" width="100%" height="100%"></rect>
        <mask id="slack-mask">
          <rect x="0" y="0" width="100%" height="100%" fill="url(#stripe-pattern)">
        </mask>
      </svg>
    </div>
  </div>
</section>

{{> footer}}
